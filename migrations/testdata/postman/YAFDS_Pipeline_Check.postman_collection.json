		{
			"name": "Sanity Tests",
			"item": [
				{
					"name": "Customer Registration Sanity",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Successful registration or already exists\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([201, 500]); // 500 might be 'already exists' in this simple app",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
