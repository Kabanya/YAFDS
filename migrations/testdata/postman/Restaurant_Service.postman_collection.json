	"item": [
		{
			"name": "1. Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{restaurant_base_url}}/health",
					"host": [
						"{{restaurant_base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check if the restaurant service is running"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has status UP\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"UP\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "2. Authentication",
			"item": [
				{
					"name": "Register Restaurant",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"{{restaurant_name}}\",\n    \"wallet_address\": \"{{restaurant_wallet_address}}\",\n    \"address\": \"{{restaurant_address}}\",\n    \"is_active\": true,\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{restaurant_base_url}}/register",
							"host": [
								"{{restaurant_base_url}}"
							],
							"path": [
								"register"
							]
						},
						"description": "Register a new restaurant account"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"restaurant_id\", jsonData.id);",
									"    pm.environment.set(\"restaurant_id\", jsonData.id);",
									"    console.log(\"Restaurant ID saved:\", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				},
				{
					"name": "Login Restaurant",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"wallet_address\": \"{{restaurant_wallet_address}}\",\n    \"password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{restaurant_base_url}}/login",
							"host": [
								"{{restaurant_base_url}}"
							],
							"path": [
								"login"
							]
						},
						"description": "Login and get authentication token"
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"restaurant_token\", jsonData.token);",
									"    pm.collectionVariables.set(\"restaurant_id\", jsonData.id);",
									"    pm.environment.set(\"restaurant_token\", jsonData.token);",
									"    pm.environment.set(\"restaurant_id\", jsonData.id);",
									"    console.log(\"Token saved:\", jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				}
			]
